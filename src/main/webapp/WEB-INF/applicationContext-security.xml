<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">


    <http auto-config='true'>
        <intercept-url pattern="/zombie/login/LoginForm" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/static/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/zombie/conference/user/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/zombie/login/logout" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/**" access="ROLE_ADMIN"/>
        <form-login login-page = "/zombie/login/LoginForm" default-target-url='/zombie/login/HomePage'/>
        <logout logout-success-url="/zombie/login/logout"/>
    </http>

    <authentication-manager>
        <authentication-provider ref="UserAuthenticationProvider"/>
    </authentication-manager>

    <beans:bean id="UserAuthenticationProvider" class="com.zombiedash.app.security.UserAuthenticationProvider"/>
</beans:beans>